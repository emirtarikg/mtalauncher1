Forum 1 Kısmı

private void timer1_Tick(object sender, EventArgs e)
        {
            panel2.Width += 2;
            if (panel2.Width >= 600) //panel2'nin hızını ayarlar.
            {
                timer1.Stop(); //timer 1 durur.
                Form2 form2 = new Form2(); //forum2 ye at verir.
                form2.Show(); // forum 1 den forum 2 ye geçer.
                Hide(); //forum 1 kapatır.
            }
        }
